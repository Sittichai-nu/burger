<h1>Eat-DA-Burger!</h1>
<form class="create-form">

  <div class="form-group">
    <label for="burg"></label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured"></label><br>
      

  <button type="submit">Add Burger</button>
</form>


<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{id}}. {{burger_name}}
        <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
          {{#if devoured}}devoured!{{else}}devour me!{{/if}}
        </button></span>
      </p>
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{id}}. {{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>
